<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:src="@drawable/girl_logo"
        tools:ignore="MissingConstraints">

    </ImageView>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints,ScrollViewCount">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <RelativeLayout
        android:id="@+id/centerHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        tools:ignore="MissingConstraints">


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/centerVerticalLine"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        tools:ignore="MissingConstraints">

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="160dp"
        android:layout_height="206dp"
        android:background="@drawable/cardboard8"
        app:layout_constraintBottom_toTopOf="@+id/bmi2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/relativeLayout10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.84"
        tools:ignore="MissingConstraints">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/exerciseCard"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="-132dp"
            android:src="@drawable/russian">

        </pl.droidsonroids.gif.GifImageView>

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="42dp"
            android:layout_marginBottom="10dp"
            android:text="Exercise"
            android:textColor="@color/lightBlue"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout10"
        android:layout_width="160dp"
        android:layout_height="206dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/cardboard5"
        app:layout_constraintBottom_toTopOf="@+id/diet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.832">

        <ImageView
            android:id="@+id/period1"
            android:layout_width="134dp"
            android:layout_height="156dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="37dp"
            app:srcCompat="@drawable/menstrution" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="7dp"
            android:text="@string/period_tracker"
            android:textColor="@color/lightBlue"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/diet"
        android:layout_width="160dp"
        android:layout_height="206dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_toStartOf="@+id/centerVerticalLine"
        android:background="@drawable/cardboard7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bmi2"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/DietCard"
            android:layout_width="140dp"
            android:layout_height="152dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="41dp"
            app:srcCompat="@drawable/keto" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="8dp"
            android:text="@string/diet"
            android:textColor="@color/lightBlue"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bmi2"
        android:layout_width="156dp"
        android:layout_height="195dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/cardboard6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/bmiCard"
            android:layout_width="140dp"
            android:layout_height="155dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="32dp"
            app:srcCompat="@drawable/bmi8" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="56dp"
            android:layout_marginBottom="5dp"
            android:text="@string/bmi"
            android:textColor="@color/lightBlue"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/girl_abs"
                android:layout_width="300dp"
                android:layout_height="280dp"
                android:src="@drawable/girl_abs"
                android:layout_marginEnd="15dp"
                tools:ignore="ContentDescription">

            </ImageView>

            <ImageView
                android:id="@+id/girl_leg"
                android:layout_width="300dp"
                android:layout_height="280dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/girl_leg"
                tools:ignore="ContentDescription">

            </ImageView>
            <ImageView
                android:id="@+id/girl_chest"
                android:layout_width="300dp"
                android:layout_height="280dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/girl_chest"
                tools:ignore="ContentDescription">

            </ImageView>
            <ImageView
                android:id="@+id/girl_bicep"
                android:layout_width="300dp"
                android:layout_height="280dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/girl_bicep"
                tools:ignore="ContentDescription">

            </ImageView>

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

